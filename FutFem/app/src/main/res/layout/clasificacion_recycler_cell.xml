<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/morado"
    android:id="@+id/main_layout_clasificacion">

    <LinearLayout
        android:id="@+id/linearLayoutTextos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BA9CCF"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/equipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="EQUIPO"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:id="@+id/puntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/equipo"
            android:paddingStart="50dp"
            android:paddingTop="5dp"
            android:text="PTOS"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:id="@+id/jugados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/puntos"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:text="PJ"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:id="@+id/ganados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/jugados"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:text="PG"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:id="@+id/empatados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ganados"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:text="PE"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:id="@+id/perdidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/empatados"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:text="PP"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:id="@+id/golesfavor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/perdidos"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:text="GF"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"/>

        <TextView
            android:id="@+id/golescontra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/golesfavor"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:text="GC"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />



    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>